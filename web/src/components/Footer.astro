<footer class="bg-gradient-to-tr from-white via-red-50 to-gray-100 text-gray-800 py-20 px-6 relative overflow-hidden">
  <!-- Decoraciones animadas -->
  <div class="absolute top-0 left-0 w-32 h-32 bg-primary/10 rounded-full blur-3xl animate-pulse-slow -z-10"></div>
  <div class="absolute bottom-0 right-0 w-48 h-48 bg-red-300/20 rounded-full blur-2xl animate-float-grid -z-10"></div>

  <div class="max-w-7xl mx-auto grid gap-12 md:grid-cols-3">
    <!-- LOGO & Slogan -->
    <div>
      <h3 class="text-2xl font-extrabold tracking-tight text-primary mb-2">üî• GrillsGuard</h3>
      <p class="text-sm text-gray-600 max-w-xs leading-relaxed">
        Precision. Fire. Flavor. We bring your grill back to life with expert care and spotless results.
      </p>
    </div>

    <!-- Enlaces r√°pidos -->
    <div>
      <h4 class="text-lg font-semibold text-gray-700 mb-4">Quick Links</h4>
      <ul class="space-y-2 text-sm text-gray-600">
        <li><a href="#services" class="hover:text-primary transition">Services</a></li>
        <li><a href="#gallery" class="hover:text-primary transition">Gallery</a></li>
        <li><a href="#testimonials" class="hover:text-primary transition">Reviews</a></li>
        <li><a href="#quote" class="hover:text-primary transition">Get a Quote</a></li>
      </ul>
    </div>

    <!-- Contacto -->
    <div>
      <h4 class="text-lg font-semibold text-gray-700 mb-4">Contact</h4>
      <p class="text-sm text-gray-600 leading-relaxed">
        Calgary, Alberta<br />
        üìû (587) 968-9747<br />
        ‚úâÔ∏è <a href="https://mail.google.com/mail/?view=cm&to=grillsguard@gmail.com" target="_blank" class="hover:text-primary">grillsguard@gmail.com</a>
      </p>
    </div>
  </div>

  <!-- L√≠nea inferior -->
  <div class="mt-16 border-t border-gray-300 pt-6 text-center text-xs text-gray-500">
    &copy; {new Date().getFullYear()} GrillsGuard. All rights reserved.
  </div>

  <style>
    @keyframes pulse-slow {
      0%, 100% { opacity: 0.15; transform: scale(1); }
      50% { opacity: 0.3; transform: scale(1.1); }
    }
    .animate-pulse-slow {
      animation: pulse-slow 8s ease-in-out infinite;
    }

    @keyframes float-grid {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }
    .animate-float-grid {
      animation: float-grid 6s ease-in-out infinite;
    }
  </style>
</footer>
