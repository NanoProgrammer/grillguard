---
const verticalSlides = [
  { src: "/images/before1.avif", alt: "Before grill cleaning" },
  { src: "/images/after1.webp", alt: "After grill cleaning" },
  { src: "/images/before2.webp", alt: "Before cleaning grill" },
  { src: "/images/after2.avif", alt: "After cleaning grill" },
];
---

<section class="relative bg-white overflow-hidden py-24">
  <!-- Fondo diagonal -->
  <div class="absolute inset-0 -z-20 clip-diagonal bg-gradient-to-tr from-white via-red-50 to-gray-100"></div>

  <!-- ðŸ”¥ Flamas animadas -->
  <div class="absolute -bottom-12 left-1/2 w-[300px] h-[300px] -translate-x-1/2 bg-red-500/20 rounded-full blur-3xl animate-flame-glow z-0"></div>

  <!-- ðŸ§¼ Cuadro decorativo detrÃ¡s del texto -->
  <div class="absolute top-24 left-8 w-40 h-40 border-4 border-dashed border-primary rotate-[15deg] opacity-30 animate-float-grid z-0"></div>
  <div class="absolute top-56 left-28 w-24 h-24 border-2 border-dotted border-gray-400 rotate-[25deg] opacity-20 animate-float-grid delay-2000 z-0"></div>

  <!-- âœ¨ Brillo metÃ¡lico -->
  <div class="absolute left-10 top-20 w-32 h-32 bg-gradient-to-br from-white/30 via-white/10 to-transparent rounded-full blur-xl animate-sparkle"></div>

  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-10 items-center relative z-10">
    <!-- Texto -->
    <div class="animate-fade-in relative z-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-primary mb-6 leading-tight animate-slide-up">
        Your BBQ Should Taste as Good as It Looks
      </h1>
      <p class="text-gray-700 text-lg mb-8 max-w-md animate-fade-in delay-150">
        We restore high-end grills across Calgary & Airdrie, so you can enjoy steakhouse flavor at home â€” without the scrubbing. Get back your weekends and impress every guest.
      </p>
      <a href="#quote" class="inline-block bg-primary hover:bg-red-800 text-white px-6 py-3 rounded-md text-base font-semibold shadow transition duration-300 animate-bounce-in">
        Get My Free Quote
      </a>
    </div>

    <!-- Carrusel vertical automÃ¡tico -->
    <div class="relative w-full h-[32rem] bottom-16 overflow-hidden rounded-lg shadow-lg animate-slide-up delay-200">
      <div class="vertical-carousel absolute top-0 left-0 w-full flex flex-col">
        {verticalSlides.concat(verticalSlides).map((img) => (
          <div class="flex-shrink-0 h-1/2 p-2">
            <img src={img.src} alt={img.alt} class="w-full h-full object-cover rounded-lg" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
/* Recorte diagonal del fondo */
.clip-diagonal {
  clip-path: polygon(0 0, 100% 0, 100% 85%, 0% 100%);
}

/* ðŸ”¥ Flamas animadas */
@keyframes flame-glow {
  0%, 100% { transform: scale(1); opacity: 0.4; }
  50% { transform: scale(1.2); opacity: 0.6; }
}
.animate-flame-glow {
  animation: flame-glow 4s ease-in-out infinite;
}

/* ðŸ§¼ FlotaciÃ³n rejilla */
@keyframes float-grid {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}
.animate-float-grid {
  animation: float-grid 6s ease-in-out infinite;
}

/* âœ¨ Brillo metÃ¡lico */
@keyframes sparkle {
  0%, 100% { opacity: 0.1; transform: scale(1); }
  50% { opacity: 0.3; transform: scale(1.1); }
}
.animate-sparkle {
  animation: sparkle 8s ease-in-out infinite;
}

/* ðŸŽž Carrusel vertical automÃ¡tico */
.vertical-carousel {
  animation: vertical-loop 12s linear infinite;
}
@keyframes vertical-loop {
  0% { transform: translateY(0); }
  100% { transform: translateY(-50%); } /* Mueve la mitad del track duplicado */
}
</style>
